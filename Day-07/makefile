# Define flags
CXX       := g++
CXX_FLAGS := -Wall -Wextra -std=c++11 -ggdb

# Define Variables
BIN     	:= bin
SRC     	:= src
INCLUDE 	:= include
LIB     	:= lib
LIBRARIES   := 
EXECUTABLE  := main

# Define Targets
all: $(BIN)/$(EXECUTABLE)

run: clean all
	clear
	@echo "ðŸš€ Executing..."
	./$(BIN)/$(EXECUTABLE)

$(BIN)/$(EXECUTABLE): $(SRC)/*.cpp
	@echo "ðŸš§ Building..."
	$(CXX) $(CXX_FLAGS) -I$(INCLUDE) -L$(LIB) $^ -o $@ $(LIBRARIES)
	@echo "ðŸš§ Buil Successful, Check binary in $(BIN)/$(EXECUTABLE)..."

clean:
	@echo "ðŸ§¹ Clearing..."
	-rm $(BIN)/*
	@echo "ðŸ§¹ Clearing Successful..."